<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/dialog_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Shadow color -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>
    <!-- Background -->
    <item android:top="2dp" android:bottom="4dp" android:left="2dp" android:right="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Background color -->
            <corners android:radius="16dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>