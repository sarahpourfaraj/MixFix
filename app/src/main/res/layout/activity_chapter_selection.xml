<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/space_background">

    <ImageView
        android:id="@+id/ivChapter1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/stone_active"
        android:onClick="onChapterClicked"
        android:tag="1"
        android:layout_margin="16dp"/>

    <ImageView
        android:id="@+id/ivChapter2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/stone_inactive"
        android:onClick="onChapterClicked"
        android:tag="2"
        android:layout_margin="16dp"/>

    <ImageView
        android:id="@+id/ivChapter3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/stone_inactive"
        android:onClick="onChapterClicked"
        android:tag="3"
        android:layout_margin="16dp"/>

    <ImageView
        android:id="@+id/ivChapter4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/stone_inactive"
        android:onClick="onChapterClicked"
        android:tag="4"
        android:layout_margin="16dp"/>

    <ImageView
        android:id="@+id/ivChapter5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/stone_inactive"
        android:onClick="onChapterClicked"
        android:tag="5"
        android:layout_margin="16dp"/>

    <ImageView
        android:id="@+id/ivChapter6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/stone_inactive"
        android:onClick="onChapterClicked"
        android:tag="6"
        android:layout_margin="16dp"/>

    <Button
        android:id="@+id/btnTotalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Total Score"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:textColor="@color/white"/>
</LinearLayout>