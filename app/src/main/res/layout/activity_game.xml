<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/light_game">

    <TextView
        android:id="@+id/tvIdea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:visibility="visible"/>

    <!-- Hearts Display -->
    <LinearLayout
        android:id="@+id/heartsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center">

        <!-- Heart 1 -->
        <ImageView
            android:id="@+id/heart1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/heart_full"
            android:layout_marginEnd="8dp"/>

        <!-- Heart 2 -->
        <ImageView
            android:id="@+id/heart2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/heart_full"
            android:layout_marginEnd="8dp"/>

        <!-- Heart 3 -->
        <ImageView
            android:id="@+id/heart3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/heart_full"/>
    </LinearLayout>

    <!-- Word to Guess (Empty Squares) -->
    <LinearLayout
        android:id="@+id/wordContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:gravity="center">
    </LinearLayout>

    <!-- Keyboard Layout -->
    <GridLayout
        android:id="@+id/keyboardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:columnCount="7"
        android:rowCount="3"
        android:alignmentMode="alignBounds"
        android:gravity="center">
    </GridLayout>

    <!-- Hint and Idea Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hint (2)"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnIdea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Idea (1)"
            android:background="@drawable/button_background"
            android:textColor="@color/white"/>


    </LinearLayout>

    <!-- Submit Button -->
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_background"
        android:textColor="@color/white"/>


    <!-- Result Text -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text=""
        android:gravity="center"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnShowScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score"
        android:layout_gravity="center_horizontal"
        android:padding="10dp" />
</LinearLayout>